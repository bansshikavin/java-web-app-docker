node{
    
   def buildNumber = BUILD_NUMBER
   
    stage("Git CheckOut"){
        git url: 'https://github.com/surjil/java-web-app-docker.git',branch: 'master'
    }
    
    stage(" Maven Clean Package"){
      def mavenHome =  tool name: "Maven", type: "maven"
      def mavenCMD = "${mavenHome}/bin/mvn"
      sh "${mavenCMD} clean package"
    } 
    
    stage("Build Dokcer Image") {
         sh "docker build -t surjil1612/java-web-app:${buildNumber} ."
    }
    
    
    stage("Docker Push"){
        
       withCredentials([string(credentialsId: 'Dockers', variable: 'Dockers')]) {
          sh "docker login -u admin -p ${Dockers}  surjil1612"   
       }
       
        sh "docker push surjil1612/java-web-app:${buildNumber}"
    }

   stage("Deploy to docker swarm cluster"){
     sshagent(['Docker_Swarm_Manager_Dev']) {
      sh 'ssh -o StrictHostKeyChecking=no ubuntu@172.31.32.167 docker service rm javawebapp || true'
      withCredentials([string(credentialsId: 'Dockers', variable: 'Dockers')]) {
 
       sh "ssh -o StrictHostKeyChecking=no ubuntu@172.31.32.167 docker login -u admin -p ${Dockers}  surjil1612"   
      }
      sh "ssh ubuntu@172.31.32.167 docker service create --name javawebapp -p 7070:8080 --replicas 2 --with-registry-auth surjil1612/java-web-app:${buildNumber}"
    }
  }
    
}
